---
import Layout from "../layouts/Layout.astro";

// Sections
import HeroSection from "../sections/homePageSections/heroSection.astro";
---

<Layout>
  <HeroSection />
  <section id="pilars-section">
    <div class="wrapper section-wrapper">
      <div class="section-title">
